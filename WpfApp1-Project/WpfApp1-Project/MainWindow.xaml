<Window x:Class="WpfApp1_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_Project"
        mc:Ignorable="d"
        Title="Employee Manager Made By Tuan Anh and Group 6" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4CAF50" Offset="0"/>
                <GradientStop Color="#2196F3" Offset="0.5"/>
                <GradientStop Color="#9C27B0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
       

        <Menu VerticalAlignment="Top" FontSize="16">
            <MenuItem Header="Quan ly danh muc" Height="40">
                <MenuItem Header="Cap nhat chuc vu" Click="btnUpdate_Pos_Click" Height="30"/>
                <MenuItem Header="Cap nhat phong ban" Click="btnUpdate_Depart_Click" Height="30"/>

            </MenuItem>
            <MenuItem Header="Quan ly nhan vien" Height="40">
                <MenuItem Header="Cap nhat thong tin nhan vien" Click="btnUpdate_infor_Click" Height="30"/>
                <MenuItem Header="Cap nhat so nam cong tac " Click="btn_UpdateYear_Click" Height="30"/>
                
            </MenuItem>
            <MenuItem Header="Quan ly luong thuong" Height="40">
                <MenuItem Header="Cap nhat Luong " Click="btnUpdate_Salary_Click" Height="30"/>
                <MenuItem Header="Cap nhat so san pham lam duoc" Click="btnSearch_Click" Height="30"/>
            </MenuItem>
            <MenuItem Header="Thong Ke" Height="40">
                <MenuItem Header="Thong ke theo ten"  Height="30"/>
                <MenuItem Header="Thong ke theo so nam cong tac" Click="btnShowAll_Click" Height="30"/>
                <MenuItem Header="Thong ke theo phong "  Height="30"/>


            </MenuItem>
        </Menu>
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                <!-- <Button x:Name="btnMainPage" Background="PaleVioletRed" Foreground="White" Margin="5" Content="Main Page" Click="btnMainPage_Click" Width="150" />-->
                <Button x:Name="btnAddEmployee" Click="btnAddEmployee_Click" Content="Thêm Nhân Viên" Width="120" Margin="5" Background="#4CAF50" Foreground="White"/>
                <Button x:Name="btnShowAll" Content="Hiển Thị Thông Tin Nhân Viên" Click="btnShowAll_Click" Width="170" Margin="5" Background="#2196F3" Foreground="White"/>

            </StackPanel>
            </Grid>
            

        </Viewbox>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Margin="18,0,-18,0"/>




    </Grid>





</Window>
